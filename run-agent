#!/bin/bash

# NexAU Agent Runner - Simple script to build and run agents
# Usage: ./run-agent <path-to-yaml-config>

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}NexAU Agent Runner${NC}"

# Check if config file is provided
if [ -z "$1" ]; then
    echo -e "${RED}Error: Please provide a YAML config file path${NC}"
    echo "Usage: $0 <path-to-yaml-config>"
    echo "Example: $0 examples/code_agent/code_agent.yaml"
    exit 1
fi

CONFIG_FILE="$1"

# Check if config file exists
if [ ! -f "$CONFIG_FILE" ]; then
    echo -e "${RED}Error: Config file '$CONFIG_FILE' not found${NC}"
    exit 1
fi

# Check if CLI directory exists
if [ ! -d "cli" ]; then
    echo -e "${RED}Error: CLI directory not found${NC}"
    exit 1
fi

# Build the CLI if needed (or if source files are newer)
echo -e "${YELLOW}Checking if CLI needs to be built...${NC}"

# Temporarily disable exit-on-error so we can interpret the probe's status.
set +e
python - <<'PY'
import os
import sys

dist = "cli/dist/cli.js"
sources = ["cli/source/app.js", "cli/source/cli.js"]

# If dist is missing, signal rebuild (exit 0)
if not os.path.exists(dist):
    sys.exit(0)

dist_mtime = os.path.getmtime(dist)

# If any source file is newer, signal rebuild (exit 0)
for src in sources:
    if not os.path.exists(src) or os.path.getmtime(src) > dist_mtime:
        sys.exit(0)

# No rebuild needed -> exit 1
sys.exit(1)
PY

probe_status=$?
set -e

if [ $probe_status -eq 0 ]; then
    echo -e "${YELLOW}Building CLI...${NC}"
    cd cli
    npm install
    npm run build
    cd ..
else
    echo -e "${GREEN}CLI already built and up-to-date${NC}"
fi

# Run the agent
echo -e "${GREEN}Running agent with config: $CONFIG_FILE${NC}"
dotenv run cli/dist/cli.js "$CONFIG_FILE"
