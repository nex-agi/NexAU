#!/bin/bash

# NorthAU Agent Runner - Simple script to build and run agents
# Usage: ./run-agent <path-to-yaml-config>

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}NorthAU Agent Runner${NC}"

# Check if config file is provided
if [ -z "$1" ]; then
    echo -e "${RED}Error: Please provide a YAML config file path${NC}"
    echo "Usage: $0 <path-to-yaml-config>"
    echo "Example: $0 examples/fake_claude_code/cc_agent.yaml"
    exit 1
fi

CONFIG_FILE="$1"

# Check if config file exists
if [ ! -f "$CONFIG_FILE" ]; then
    echo -e "${RED}Error: Config file '$CONFIG_FILE' not found${NC}"
    exit 1
fi

# Check if CLI directory exists
if [ ! -d "cli" ]; then
    echo -e "${RED}Error: CLI directory not found${NC}"
    exit 1
fi

# Build the CLI if needed
echo -e "${YELLOW}Checking if CLI needs to be built...${NC}"

if [ ! -d "cli/dist" ] || [ ! -f "cli/dist/cli.js" ]; then
    echo -e "${YELLOW}Building CLI...${NC}"
    cd cli
    npm install
    npm run build
    cd ..
else
    echo -e "${GREEN}CLI already built${NC}"
fi

# Run the agent
echo -e "${GREEN}Running agent with config: $CONFIG_FILE${NC}"
dotenv run cli/dist/cli.js "$CONFIG_FILE"